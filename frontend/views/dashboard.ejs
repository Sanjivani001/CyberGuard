<!DOCTYPE html>
<html>
<head><meta charset="utf-8"/><title>Dashboard</title><link rel="stylesheet" href="/style.css"></head>
<body>
  <div class="container">
    <h1>Threat Records</h1>
    <p><a href="/">Back</a> | <a href="/export-json">Export JSON</a></p>

    <table>
      <thead><tr><th>Target</th><th>Risk</th><th>Flagged</th><th>Solution</th><th>Time</th></tr></thead>
      <tbody>
        <% alerts.forEach(a => { %>
          <tr>
            <td><%= a.target %></td>
            <td><%= a.riskScore %></td>
            <td><%= a.flagged ? 'YES' : 'NO' %></td>
            <td><%= a.solution %></td>
            <td><%= new Date(a.createdAt).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
